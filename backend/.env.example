# IMPORTANT: This file contains sensitive information and should NEVER be committed to version control
# Create a .env file with your own values for local development
# See .env.example for the required variables

# MongoDB Connection URI (required)
# For local development: mongodb://localhost:27017/blood-donation
# For production (MongoDB Atlas): mongodb+srv://<username>:<password>@<cluster-url>/blood-donation?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster-url>/blood-donation?retryWrites=true&w=majority

# JWT Secret Key (required)
# Generate a strong secret key for production
JWT_SECRET=your_jwt_secret_key_here

# Port (optional, defaults to 5001)
PORT=5001

# Node Environment
NODE_ENV=production